import Card from "../components/ui/Card.astro";
import Badge from "../components/ui/Badge.astro";
import Container from "../components/ui/Container.astro";
import SectionHeading from "../components/ui/SectionHeading.astro";
import FeatureGrid from "../components/ui/FeatureGrid.astro";
import PricingTable from "../components/ui/PricingTable.astro";
import FAQAccordion from "../components/ui/FAQAccordion.astro";
import Testimonial from "../components/ui/Testimonial.astro";
import CTASection from "../components/ui/CTASection.astro";

const features = [
  {
    title: "Composable building blocks",
    description: "Every UI primitive shares spacing, shadows, and typography tokens for visual harmony.",
    icon: "ðŸ”®",
  },
  {
    title: "Accessible defaults",
    description: "Focus-visible rings, semantic markup, and readable contrast are turned on from the start.",
