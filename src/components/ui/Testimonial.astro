---
const { quote, name, role, avatar, highlight } = Astro.props;
---

<figure class="card-surface p-6 flex flex-col gap-4" aria-label={`Testimonial from ${name}`}>
  <blockquote class="text-lg text-foreground leading-relaxed">“{quote}”</blockquote>
  <figcaption class="flex items-center gap-3">
    {avatar ? (
      <img
        src={avatar}
        alt={`${name} avatar`}
        width="40"
        height="40"
        class="h-10 w-10 rounded-full object-cover"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <span class="flex h-10 w-10 items-center justify-center rounded-full bg-aurora/10 text-aurora" aria-hidden="true">★</span>
    )}
    <div class="flex flex-col text-sm">
      <span class="font-semibold text-foreground">{name}</span>
      <span class="text-muted">{role}</span>
    </div>
    {highlight && <span class="ml-auto rounded-full bg-aurora/15 px-3 py-1 text-xs font-semibold text-aurora">{highlight}</span>}
  </figcaption>
</figure>
