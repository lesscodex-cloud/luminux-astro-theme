---
const { eyebrow, title, description, align = "left" } = Astro.props;
const alignment = align === "center" ? "items-center text-center" : "items-start text-left";
---

<div class={`flex flex-col gap-3 ${alignment}`}>
  {eyebrow && <p class="text-xs uppercase tracking-[0.2em] text-aurora">{eyebrow}</p>}
  {title && <h2 class="font-display text-3xl font-semibold text-white sm:text-4xl">{title}</h2>}
  {description && <p class="text-lg text-slate max-w-3xl">{description}</p>}
</div>
