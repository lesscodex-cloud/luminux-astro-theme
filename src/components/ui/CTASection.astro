---
const { eyebrow, title, description, primaryAction, secondaryAction } = Astro.props;
---

<section class="card-surface p-8 flex flex-col gap-4 items-start text-left sm:flex-row sm:items-center sm:justify-between">
  <div class="flex flex-col gap-2 max-w-2xl">
    {eyebrow && <p class="text-xs uppercase tracking-[0.2em] text-aurora">{eyebrow}</p>}
    <h2 class="font-display text-3xl font-semibold text-white sm:text-4xl">{title}</h2>
    {description && <p class="text-slate text-lg">{description}</p>}
  </div>
  <div class="flex flex-wrap gap-3">
    {primaryAction}
    {secondaryAction}
  </div>
</section>
