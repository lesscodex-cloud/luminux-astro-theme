---
interface Feature {
  title: string;
  description: string;
  icon?: string;
}

const { features = [] }: { features: Feature[] } = Astro.props;
---

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {features.map((feature) => (
    <div class="card-surface p-5 flex flex-col gap-3" role="article">
      {feature.icon && (
        <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-aurora/10 text-aurora" aria-hidden="true">
          {feature.icon}
        </span>
      )}
      <h3 class="text-lg font-semibold text-white">{feature.title}</h3>
      <p class="text-slate text-sm leading-relaxed">{feature.description}</p>
    </div>
  ))}
</div>
