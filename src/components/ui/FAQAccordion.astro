---
interface FAQ {
  question: string;
  answer: string;
}

const { faqs = [] }: { faqs: FAQ[] } = Astro.props;
---

<div class="flex flex-col divide-y divide-white/10 rounded-2xl border border-white/10 bg-white/5">
  {faqs.map((faq, index) => (
    <details class="group" id={`faq-${index}`}>
      <summary
        class="flex cursor-pointer list-none items-center justify-between gap-3 px-5 py-4 text-left text-white transition hover:bg-white/5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-aurora"
        aria-controls={`faq-panel-${index}`}
      >
        <span class="font-semibold">{faq.question}</span>
        <span class="text-aurora transition-transform duration-200 group-open:rotate-45" aria-hidden="true">+</span>
      </summary>
      <div id={`faq-panel-${index}`} class="px-5 pb-4 text-sm text-slate">
        {faq.answer}
      </div>
    </details>
  ))}
</div>
