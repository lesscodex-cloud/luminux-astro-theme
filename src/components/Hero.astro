---
import { siteConfig } from "../lib/site";
---

<section class="section-shell grid grid-cols-1 lg:grid-cols-2 gap-12 items-center" id="top">
  <div class="flex flex-col gap-6">
    <span class="badge w-fit">New â€¢ Production-ready Astro theme</span>
    <h1
      class="font-display text-4xl sm:text-5xl lg:text-6xl font-semibold text-foreground leading-tight"
    >
      Launch brighter products with <span class="text-aurora">{siteConfig.name}</span>
    </h1>
    <p class="text-lg text-muted leading-relaxed max-w-2xl">
      {siteConfig.description}
    </p>
    <div class="flex flex-wrap items-center gap-3">
      <a class="button-primary" href={siteConfig.cta.primary.href}>{siteConfig.cta.primary.label}</a
      >
      <a class="button-ghost" href={siteConfig.cta.secondary.href}
        >{siteConfig.cta.secondary.label}</a
      >
    </div>
    <div class="grid grid-cols-2 gap-4 mt-4">
      {
        siteConfig.highlights.map((highlight) => (
          <div class="card-surface p-4 flex gap-3 items-start">
            <div class="icon-circle">âœ¨</div>
            <p class="text-sm text-foreground leading-snug">{highlight}</p>
          </div>
        ))
      }
    </div>
  </div>
  <div class="relative">
    <div class="absolute inset-0 grid-fade opacity-60" aria-hidden="true"></div>
    <div class="relative card-surface p-8 flex flex-col gap-6">
      <p class="text-xs uppercase text-aurora font-semibold tracking-wide">Dashboard preview</p>
      <div
        class="aspect-[4/3] w-full rounded-xl bg-gradient-to-br from-surface/80 to-surface-muted/80 border border-border/30 p-6 flex flex-col gap-4"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-muted">Active sessions</p>
            <p class="text-3xl font-semibold text-foreground">2,318</p>
          </div>
          <span class="badge">+12% this week</span>
        </div>
        <div class="grid grid-cols-3 gap-3 text-sm text-muted">
          <div class="card-surface p-4">
            <p>Deploys</p>
            <p class="text-2xl font-semibold text-foreground">42</p>
          </div>
          <div class="card-surface p-4">
            <p>Uptime</p>
            <p class="text-2xl font-semibold text-foreground">99.9%</p>
          </div>
          <div class="card-surface p-4">
            <p>Regions</p>
            <p class="text-2xl font-semibold text-foreground">12</p>
          </div>
        </div>
        <div class="card-surface p-4 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="icon-circle">ðŸŒ™</div>
            <div>
              <p class="text-foreground font-semibold leading-none">Dark mode native</p>
              <p class="text-xs text-muted">Crafted for OLED and night readers</p>
            </div>
          </div>
          <button class="button-primary text-sm px-4 py-2">Preview</button>
        </div>
      </div>
    </div>
  </div>
</section>
