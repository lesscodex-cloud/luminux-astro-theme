---
import { pricing } from "../lib/site-config";
---

<section class="section-shell" id="pricing">
  <div class="flex flex-col gap-3 mb-10">
    <span class="badge w-fit">Pricing</span>
    <h2 class="text-3xl sm:text-4xl font-display font-semibold text-white">
      Pick your launch plan
    </h2>
    <p class="text-slate max-w-2xl">
      Straightforward pricing for teams of all sizes. Upgrade any time when you need more support.
    </p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    {
      pricing.map((tier) => (
        <article
          class={`card-surface p-6 flex flex-col gap-4 ${tier.highlighted ? "border-aurora/50 shadow-glow" : ""}`}
        >
          <div class="flex items-center justify-between">
            <h3 class="text-xl font-semibold text-white">{tier.name}</h3>
            {tier.highlighted && <span class="badge">Popular</span>}
          </div>
          <p class="text-3xl font-semibold text-white">{tier.price}</p>
          <p class="text-slate text-sm">{tier.description}</p>
          <ul class="flex flex-col gap-2 text-sm text-slate">
            {tier.features.map((feature) => (
              <li class="flex items-center gap-2">
                <span class="text-aurora">â€¢</span>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          <a
            class={`${tier.highlighted ? "button-primary" : "button-ghost"} w-full text-center`}
            href="#"
          >
            {tier.highlighted ? "Choose plan" : "Start now"}
          </a>
        </article>
      ))
    }
  </div>
</section>
