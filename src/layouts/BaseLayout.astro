---
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Luminux â€” Astro SaaS Theme",
  description = "Launch a luminous product story with Astro, Tailwind, and TypeScript.",
} = Astro.props as {
  title?: string;
  description?: string;
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="gradient-ring">
    <a class="skip-link" href="#main-content">Skip to main content</a>
    <div class="relative min-h-screen flex flex-col">
      <div
        class="fixed inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-aurora/60 to-transparent"
      ></div>
      <NavBar />
      <main id="main-content" class="flex-1 flex flex-col">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
