---
import "../styles/global.css";
import Seo from "../components/Seo.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import type { SeoProps } from "../lib/seo";

const { seo = {}, title, description } = Astro.props as {
  seo?: SeoProps;
  title?: string;
  description?: string;
};

const mergedSeo: SeoProps = {
  title,
  description,
  ...seo,
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <Seo {...mergedSeo} />
    <script is:inline>
      (() => {
        const getStored = () => {
          try {
            return localStorage.getItem('theme');
          } catch (error) {
            return null;
          }
        };

        const getPreferred = () => {
          const stored = getStored();
          if (stored === 'light' || stored === 'dark') return stored;
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };

        const applyTheme = (theme) => {
          const root = document.documentElement;
          root.classList.toggle('dark', theme === 'dark');
          root.dataset.theme = theme;
          root.style.colorScheme = theme;
        };

        const setTheme = (theme) => {
          applyTheme(theme);
          try {
            localStorage.setItem('theme', theme);
          } catch (error) {
            // Ignore persistence failures
          }
        };

        const syncMediaPreference = (event) => {
          if (getStored()) return;
          applyTheme(event.matches ? 'dark' : 'light');
        };

        const initialTheme = getPreferred();
        applyTheme(initialTheme);

        const media = window.matchMedia('(prefers-color-scheme: dark)');
        media.addEventListener('change', syncMediaPreference);

        window.__luminuxTheme = {
          set: setTheme,
          toggle: () => setTheme(document.documentElement.dataset.theme === 'dark' ? 'light' : 'dark'),
        };
      })();
    </script>
  </head>
  <body class="gradient-ring">
    <a class="skip-link" href="#main-content">Skip to main content</a>
    <div class="relative min-h-screen flex flex-col">
      <div
        class="fixed inset-x-0 top-0 h-px bg-gradient-to-r from-transparent via-aurora/60 to-transparent"
      ></div>
      <NavBar />
      <main id="main-content" class="flex-1 flex flex-col">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
